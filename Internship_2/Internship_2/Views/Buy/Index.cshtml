@model Internship_2.Models.CarImageModel

@{
    ViewBag.Title = "Index";

    
    
   
}
<body ng-app="BuyPageApp" ng-controller="BuyPageController">
    <table style="margin:0px">
        <tr>
            <td style="padding-left:10px;width:200px" >
                <div style="height:530px; width:250px;border-style:solid;border-width:2px;border-color:black;">
                    <h3 style="padding: 5px 5px 5px 5px">Refine Your Search</h3>
                    <hr />
                    <ul>
                        <li>
                            
                            <label for="CityFilter">Select City</label><br />
                            <select data-ng-model="currentCity" data-ng-options="city.Text for city in GetCities" ng-change="changeView('CityFilter')"></select>
                                
                        </li>

                        <li style="padding-top:20px">
                            <label for="BudgetRangeFilter">Budget</label><br />
                            <select data-ng-model="currentBudgetRange" data-ng-options="budgetRange.Text for budegetRange in GetBudgetRanges" ng-change="changeView('BudgetRangeFilter')"></select>
                        </li>
                        <li style="padding-top:20px">
                            <label for="YearRangeFilter">Years</label><br />
                            <select data-ng-model="currentYearRange" data-ng-options="yearRange.Text for yearRange in GetYearRanges" ng-change="changeView('YearRangeFilter')"></select>
                        </li>
                        <li style="padding-top:20px">
                            <label for="MakeFilter">Makes</label><br />
                            <select data-ng-model="currentMake" data-ng-options="make.Text for make in GetMakes" ng-change="changeView('MakeFilter')"></select>
                        </li>
                        <li style="padding-top:20px">
                            <label for="ColorFilter">Colors</label><br />
                            <select data-ng-model="currentColor" data-ng-options="color.Text for color in GetColors" ng-change="changeView('ColorFilter')"></select>
                        </li>
                        <li style="padding-top:20px">
                            <label for="KMRangeFilter">Kilometers Driven</label>
                            <select data-ng-model="currentKMRange" data-ng-options="kmRange.Text for kmRange in GetKMRanges" ng-change="changeView('KMRangeFilter')"></select>
                        </li>
                    </ul>

                </div>
                </td>
           
                <td style="padding-left:100px">
                    <div ng-view>

                        <div id="grid">
                            @{var grid = new WebGrid(Model, canPage: true, rowsPerPage: 3);
                            grid.Pager(WebGridPagerModes.NextPrevious);
                            
                            }

                            @grid.GetHtml(

              columns: grid.Columns(

                               grid.Column("Path",format: (item) => new HtmlString("<img src="+@item.PathOfImage+" />"),canSort: false)
         ));
                                            
                         </div>
                    </div>

</td>
           

            </tr>
        </table>
    
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    @Scripts.Render("~/bundles/BuyPageApp")
</body>

