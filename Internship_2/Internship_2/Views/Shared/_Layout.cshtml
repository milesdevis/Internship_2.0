<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
            <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css">
            @Styles.Render("~/Content/css")

 
            <div class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" ng-click="navbarProperties.isCollapsed = !navbarProperties.isCollapsed">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>                       
                    </div>
                    <div class="navbar-collapse collapse" collapse="navbarProperties.isCollapsed">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("LOGO","Index","Home")</li>                  <!--Insert Logo Image here-->
                            <li>+91 7259 28 0001</li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("About Us","AboutUs","Home")</li>
                            <li>@Html.ActionLink("How It Works","HowItWorks","Home")</li>
                            <li>@Html.ActionLink("Login","Login","Account")</li>
                            <li>@Html.ActionLink("Buy","Buy","Account")</li>
                            <li>
                            <form action="/Account/Sell">
                                <input type="submit" value="Sell Your Car" class="myButton" />
                                </form>
                            </li> 
                        </ul>
                    </div>
                </div>
            </div>

    </header>
   
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer  style="width:100%;height:250px">
            <div style="float: left; width: 25%;">
                <ul style="list-style-type:none">
                    <li><h3>Overview</h3></li>
                    <li>@Html.ActionLink("Press","Press","Home")</li>
                    <li>@Html.ActionLink("Sell A Car","Sell","Account")</li>
                    <li>@Html.ActionLink("Buy A Car","Buy","Account")</li>

                </ul>
            </div>
            <div style="float: left; width: 25%;">
                <ul style="list-style-type:none">
                    <li><h3>DriveOJoy</h3></li>
                    <li>@Html.ActionLink("About Us", "AboutUs","Home")</li>
                    <li>@Html.ActionLink("Jobs","Jobs","Home")</li>
                    <li>@Html.ActionLink("Blog","Blog","Home")</li>
                    <li>@Html.ActionLink("Privacy Policy","PrivacyPolicy","Home")</li>

                </ul>
            </div>
            <div style="float: left; width: 25%;">
                <ul style="list-style-type:none">;
                    <li><h3>Support</h3></li>
                    <li>@Html.ActionLink("Contact Us","ContactUs","Home")</li>
                    <li>Call+91 7259280001</li>

                </ul>
            </div>
            <div style="float: right; width: 25%; padding-top:25px;">
                <ul style="list-style-type:none">
                    <li><a href="https://support@driveojoy.com/">https://support@driveojoy.com/</a></li>
                    <li><a href="https://www.facebook.com/driveojoy">https://www.facebook.com/driveojoy</a></li>
                    <li><a href="https://twitter.com/driveojoy">https://twitter.com/driveojoy</a></li>
                    <li><a href="https://www.linkedin.com/driveojoy">https://www.linkedin.com/driveojoy</a></li>
                    <li><a href="https://plus.google.com/driveojoy">https://plus.google.com/driveojoy</a></li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>