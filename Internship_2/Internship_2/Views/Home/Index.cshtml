@model Internship_2.Models.BuyViewModel

@{
    ViewBag.Title = "DriveOJoy";
}

<body>
    <div style="width:100%;height:550px;margin:0px"><img  src="~/Images/car3.0.jpg" style="width:100%;height:500px"></div>
    <div class="transboxTwo">
    <div style="width:100%;height:50px;background-color:#DCDCDC;padding:5px 5px 10px 10px;text-align:center;border-width:thin;">

        @using (Html.BeginForm("BrowseCars", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div style="float:left; width:20%;">
                @Html.LabelFor(m => m.SelectedLocationId) <br />
                @Html.DropDownListFor(m => m.SelectedLocationId, Model.LocationFilter)
            </div>

            <div style="float:left; width:20%; padding-left:10px;">
                @Html.LabelFor(m => m.SelectedMakeId) <br />
                @Html.DropDownListFor(m => m.SelectedMakeId, Model.MakeFilter)
            </div>

            <div style="float:left; width:20%; padding-left:10px;">
                @Html.LabelFor(m => m.SelectedBodyTypeId) <br />
                @Html.DropDownListFor(m => m.SelectedBodyTypeId, Model.BodyTypeFilter)

            </div>

            <div style="float:left; width:20%; padding-left:10px;">
                @Html.LabelFor(m => m.SelectedModelId) <br />
                @Html.DropDownListFor(m => m.SelectedModelId, Model.ModelFilter)

            </div>

            <div>
                <input type="submit" value="Browse Cars" class="myNinthButton" style="float:right;width:20%;padding-left:10px" />
            </div>
        }

       </div>
    </div>
    <div class="element_3">
        <div style="float:left; width:25%;">
            <div style="padding:40px; background-color:#f6f6f6;"><img src="~/Images/rocket.jpg" /></div>
        </div>
        <div style="float:right;width:75%;">
            <h2>DriveOJoy is the most fastest and reliable used car market in India</h2>
            <hr />
            <p>
                Our goal is to turn what is universally regarded as a burdensome life event into<br /> a delightful experience,
                and to bring trust and simplicity to the peer-to-peer used car market.
            </p>
            <form action="/Home/AboutUs">
                <input type="submit" value="ABOUT US" class="myThirdButton" />
            </form>           <!--THE BG IMAGE SHOUD BE ADDED-->
        </div>
        <h2 style="align-content:center">How It Works</h2>
        <h4 style="align-content:center">You Will Never Run Out Of Reasons to Choose Us</h4>
    </div>

    <div>
        <div style="float:left;width:50%;padding-left:400px;">
            <form action="/Sell/Index">
                <input type="submit" value="If You Are A Seller" class="myFourthButton" />
            </form>
        </div>
        <div style="float:right;width:50%">
            <form action="/Buy/Index">
                <input type="submit" value="If You Are A Buyer" class="myFifthButton" />
            </form>
        </div>

        <div style="padding-top:80px">
            <table>
                <tr style="padding-left:100px;">
                    <td style="padding-left:20px;padding-right:20px;"><h4>Get A Price Quote</h4></td>
                    <td style="padding-right:20px;"><h4>Schedule An Inspection</h4></td>
                    <td style="padding-right:20px;"><h4>We Ready Your Car</h4></td>
                    <td style="padding-right:20px;"><h4>Let Us Handle The Rest</h4></td>
                </tr>

                <tr style="font-size:small;padding-left:100px;">
                    <td style="padding-right:20px;">Submit your car details and recieve a no<br />obligation price quoute for your car. </td>
                    <td style="padding-right:20px;">Request a free inspection and we'll send a<br />designated inpsector at your doorstep</td>
                    <td style="padding-right:20px;">Once you car passes muster, we clean it<br />inside out and take professional pictures.</td>
                    <td style="padding-right:20px;">We handle all inbound calls, tes drives,<br />negotiations & post sale lengthy paperwork.</td>
                </tr>
            </table>
        </div>
        <div style="padding-left:500px;padding-top:40px;padding-bottom:15px;">
            <form action="/Home/AboutUs">
                <input type="submit" value="LEARN MORE" class="mySixthButton" />
            </form>
        </div>
    </div>
    <div style="color:lavenderblush;font-family:Arial;background-image:url(http://www.blirk.net/wallpapers/1366x768/grand-canyon-wallpaper-5.jpg);width:100%;height:400px;">

        <h3 style="padding-top:10px;text-align:center;">Testimonials</h3>
        <h4 style="text-align:center;">Here what people are saying about us!</h4>
        <div class="transbox" style="float:left;padding-left:20px;width:25%;">
            <p>Paragraph 1</p>

        </div>

        <div class="transbox" style="float:right;padding-left:20px;width:25%;">
            <p>Paragraph 2</p>

        </div>
        <div style="padding-top:250px;padding-left:490px;">
            <form action="">
                <input type="submit" value="MORE TESTIMONIALS" class="mySeventhButton" />
            </form>
        </div>     <!--ADD LINK-->
    </div>

    <div>
        <table>
            <tr>
                <td><h2>Featured On:</h2></td>
                <td><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTRjzvD4Tv1RW3jZ6nwuwfLOcNi4RHhfX4u1fLItGgsOXoBvt17zg" /></td>
                <td style="padding-left:10px;"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT3D2ucE-j6osdJXRbTYZTdngKLTl_obkboKMk_b4EF4RYaliE2qw" /></td>
                <td style="padding-left:20px;"><img src="data:image/jpeg;base64," /></td>
                <td style="padding-left:20px;"><img src="data:image/png;base64," /></td>
            </tr>
        </table>
    </div>
